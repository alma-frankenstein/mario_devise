  <h4>Here are the reviews for <%= @product.name %>:</h4>

  <% @product.reviews.each do |review| %>
    <ul>
      <li>
        <%= link_to review.content_body, product_review_path(@product, review) %>
      </li>
    </ul>
  <% end %>

<p><%= link_to "Add a review", new_product_review_path(@product) %></p>

<p><%= link_to "Edit name of product", edit_product_path(@product) %></p>
<p><%= link_to "Delete this product", product_path(@product),
                         :data => {:confirm => "You sure?",
                                   :method => "delete"} %></p>

<p><%= link_to "Return to products", products_path %></p>